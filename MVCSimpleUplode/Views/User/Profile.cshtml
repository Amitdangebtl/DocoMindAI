@model MVCSimpleUplode.Models.UserProfileViewModel
@{
    ViewBag.Title = "My Profile";
}

<style>
    /* ===== PROFILE CARD ===== */
    .profile-card {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        box-shadow: 0 20px 45px rgba(15,23,42,0.15);
        overflow: hidden;
    }

    /* ===== HEADER ===== */
    .profile-header {
        background: linear-gradient(135deg, #1e40af, #2563eb, #4f46e5);
        color: #ffffff;
        padding: 22px 26px;
        font-weight: 600;
    }

    /* ===== BODY ===== */
    .profile-body {
        padding: 26px;
        font-size: 1rem;
    }

    .profile-label {
        font-weight: 600;
        color: #1e293b;
    }

    /* ===== BUTTONS ===== */
    .btn-edit {
        background: linear-gradient(90deg, #f59e0b, #fbbf24);
        border: none;
        color: #1e293b;
        border-radius: 10px;
        padding: 8px 20px;
        font-weight: 600;
    }

    .btn-back {
        background: linear-gradient(90deg, #64748b, #475569);
        border: none;
        color: #ffffff;
        border-radius: 10px;
        padding: 10px 24px;
        font-weight: 600;
    }
</style>

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- ===== PROFILE CARD ===== -->
            <div class="profile-card mb-4">

                <div class="profile-header">
                    👤 My Profile
                </div>

                <div class="profile-body">
                    <p>
                        <span class="profile-label">Name:</span>
                        @Model.Name
                    </p>

                    <p>
                        <span class="profile-label">Email:</span>
                        @Model.Email
                    </p>

                    <a asp-action="EditProfile"
                       class="btn btn-edit mt-2">
                        ✏ Edit Profile
                    </a>
                </div>

            </div>

            <!-- ===== BACK BUTTON ===== -->
            <div class="text-center">
                <a asp-controller="User"
                   asp-action="Dashboard"
                   class="btn btn-back">
                    ⬅ Back to Dashboard
                </a>
            </div>

        </div>
    </div>

</div>