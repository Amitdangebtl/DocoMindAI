@{
    ViewBag.Title = "User Dashboard";
}
<style>
    /* ===== HEADER ===== */
    .user-dashboard-header {
        background: linear-gradient(135deg, #1e40af, #2563eb, #4f46e5);
        color: #ffffff;
        border-radius: 18px;
        padding: 32px;
        text-align: center;
        box-shadow: 0 20px 45px rgba(30,64,175,0.35);
        margin-bottom: 35px;
    }

    /* ===== DASHBOARD CARD ===== */
    .dash-card {
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(10px);
        border-radius: 18px;
        padding: 28px 20px;
        text-align: center;
        box-shadow: 0 18px 40px rgba(15,23,42,0.12);
        transition: all 0.35s ease;
        height: 100%;
    }

        .dash-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 30px 60px rgba(15,23,42,0.2);
        }

    .dash-icon {
        font-size: 42px;
        margin-bottom: 12px;
    }

    .dash-card h5 {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .dash-card p {
        color: #64748b;
        font-size: 0.95rem;
        margin-bottom: 16px;
    }

    /* ===== BUTTONS ===== */
    .btn-profile {
        background: linear-gradient(90deg, #2563eb, #4f46e5);
        border: none;
        color: #fff;
        border-radius: 12px;
        padding: 8px 22px;
        font-weight: 600;
    }

    .btn-docs {
        background: linear-gradient(90deg, #22c55e, #16a34a);
        border: none;
        color: #fff;
        border-radius: 12px;
        padding: 8px 22px;
        font-weight: 600;
    }

    .btn-ai {
        background: linear-gradient(90deg, #0f172a, #1e293b);
        border: none;
        color: #fff;
        border-radius: 12px;
        padding: 8px 22px;
        font-weight: 600;
    }
</style>

<div class="container mt-4">

    <!-- ===== HEADER ===== -->
    <div class="user-dashboard-header">
        <h2 class="fw-bold mb-1">👤 User Dashboard</h2>
        <p class="opacity-75 mb-0">
            Manage your profile, documents & AI queries
        </p>
    </div>

    <!-- ===== DASHBOARD CARDS ===== -->
    <div class="row g-4">

        <!-- PROFILE -->
        <div class="col-md-4">
            <div class="dash-card">
                <div class="dash-icon">🙋</div>
                <h5>My Profile</h5>
                <p>View and manage your profile</p>
                <a asp-action="Profile"
                   class="btn btn-profile btn-sm">
                    Open
                </a>
            </div>
        </div>

        <!-- DOCUMENTS -->
        <div class="col-md-4">
            <div class="dash-card">
                <div class="dash-icon">📄</div>
                <h5>My Documents</h5>
                <p>View your uploaded PDFs</p>
                <a asp-controller="Document"
                   asp-action="MyDocuments"
                   class="btn btn-docs btn-sm">
                    View
                </a>
            </div>
        </div>

        <!-- ASK AI -->
        <div class="col-md-4">
            <div class="dash-card">
                <div class="dash-icon">🤖</div>
                <h5>Ask AI</h5>
                <p>Query your documents with AI</p>
                <a asp-controller="Ai"
                   asp-action="Ask"
                   class="btn btn-ai btn-sm">
                    Ask
                </a>
            </div>
        </div>

    </div>

</div>