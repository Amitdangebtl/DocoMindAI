<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <!-- ===== TITLE (Browser Tab Text) ===== -->
    <title>@ViewBag.Title - SimpleUpload</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ✅ FAVICON (WORKS 100% BEFORE & AFTER LOGIN) -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
          rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(180deg, #f5f7fb, #eef2ff);
            color: #0f172a;
        }

        /* ===== PAGE WRAPPER ===== */
        .page-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ===== MAIN CONTENT ===== */
        main {
            flex: 1;
        }

        /* ===== CONTENT CARD ===== */
        .content-card {
            background: #ffffff;
            border-radius: 14px;
            padding: 28px;
            box-shadow: 0 15px 35px rgba(15, 23, 42, 0.08);
        }

        /* ===== FOOTER ===== */
        footer {
            background: #ffffff;
            border-top: 1px solid #e5e7eb;
            font-size: 0.9rem;
            color: #64748b;
        }
    </style>
</head>

<body>

    <div class="page-wrapper">

        <!-- ===== MAIN ===== -->
        <main class="container mt-5">
            <div class="content-card">
                @RenderBody()
            </div>
        </main>

        <!-- ===== FOOTER ===== -->
        <footer class="text-center py-3 mt-5">
            © @DateTime.Now.Year <strong>SimpleUpload</strong> — Secure & Easy File Upload
        </footer>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>