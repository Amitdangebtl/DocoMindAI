@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />

    <title>@(ViewBag.Title ?? "DocoMind AI")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- FAVICON -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
          rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
          rel="stylesheet" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(180deg, #f8fafc, #eef2ff);
            color: #0f172a;
        }

        .navbar {
            background: #1e293b;
            border-bottom: 1px solid rgba(255,255,255,0.08);
        }

        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 700;
            font-size: 1.3rem;
            color: #ffffff !important;
        }

            .navbar-brand img {
                width: 28px;
                height: 28px;
                object-fit: contain;
            }

        .nav-link {
            color: #c7d2fe !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #ffffff !important;
            }

        main.container {
            min-height: 75vh;
        }

        footer {
            background: rgba(255,255,255,0.9);
            border-top: 1px solid #e5e7eb;
            color: #64748b;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>

    <!-- ===== NAVBAR ===== -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">

            <!-- ✅ LOGO + NAME (NO ORANGE BACKGROUND) -->
            <a class="navbar-brand"
               asp-controller="Auth" asp-action="Login">
                <img src="~/image/documind1.png" alt="DocoMind AI Logo" />
                DocoMind AI
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav me-auto">

                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2"></i> Dashboard
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Document" asp-action="MyDocuments">
                                    <i class="bi bi-file-earmark-text"></i> My Documents
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Ai" asp-action="Ask">
                                    <i class="bi bi-stars"></i> Ask AI
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-shield-lock"></i> Admin
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-warning"
                               asp-controller="Auth"
                               asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <!-- ===== BODY ===== -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center py-3">
        © @DateTime.Now.Year <strong>DocoMind AI</strong> — Smart Document Management with AI
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>