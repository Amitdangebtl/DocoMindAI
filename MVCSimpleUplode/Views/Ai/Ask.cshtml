@model MVCSimpleUplode.Models.AskViewModel
@{
    ViewBag.Title = "Ask AI";
}

<style>
    /* ===== HEADER ===== */
    .ai-header {
        background: linear-gradient(135deg, #1e40af, #2563eb, #4f46e5);
        color: #ffffff;
        border-radius: 16px 16px 0 0;
        padding: 22px;
        text-align: center;
        box-shadow: 0 18px 40px rgba(30,64,175,0.35);
    }

    /* ===== CARD ===== */
    .ai-card {
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        box-shadow: 0 20px 45px rgba(15,23,42,0.15);
        overflow: hidden;
    }

    /* ===== FORM ===== */
    .form-label {
        font-weight: 600;
        color: #1e293b;
    }

    .form-control,
    .form-select {
        border-radius: 10px;
        padding: 10px 14px;
    }

    /* ===== ASK BUTTON ===== */
    .btn-ask {
        background: linear-gradient(90deg, #2563eb, #4f46e5);
        border: none;
        color: #fff;
        border-radius: 12px;
        padding: 12px;
        font-weight: 600;
    }

    /* ===== ANSWER CARD ===== */
    .answer-header {
        background: linear-gradient(90deg, #22c55e, #16a34a);
        color: #ffffff;
        padding: 16px;
        border-radius: 16px 16px 0 0;
    }

    .answer-body {
        background: #f8fafc;
        padding: 18px;
        line-height: 1.6;
    }

    /* ===== BACK BUTTON ===== */
    .btn-back {
        background: linear-gradient(90deg, #64748b, #475569);
        border: none;
        color: #fff;
        border-radius: 10px;
        padding: 10px 26px;
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- ===== ASK AI CARD ===== -->
            <div class="ai-card mb-4">
                <div class="ai-header">
                    <h4 class="mb-0">🤖 Ask AI from Your Document</h4>
                </div>

                <div class="p-4">
                    <form method="post">

                        <!-- DOCUMENT DROPDOWN -->
                        <div class="mb-3">
                            <label class="form-label">Select Document</label>
                            <select asp-for="DocumentId"
                                    asp-items="Model.Documents"
                                    class="form-select">
                                <option value="">-- Select Your Document --</option>
                            </select>
                        </div>

                        <!-- QUESTION -->
                        <div class="mb-3">
                            <label class="form-label">Your Question</label>
                            <textarea asp-for="Question"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Ask something..."></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-ask">
                                Ask AI
                            </button>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger mt-3">
                                @ViewBag.Error
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- ===== AI ANSWER ===== -->
            @if (!string.IsNullOrEmpty(Model?.Answer))
            {
                <div class="ai-card mb-4">
                    <div class="answer-header">
                        <h5 class="mb-0">✅ AI Answer</h5>
                    </div>
                    <div class="answer-body">
                        <p class="mb-0">@Model.Answer</p>
                    </div>
                </div>
            }

            <!-- ===== BACK BUTTON (ROLE BASED – FINAL FIX) ===== -->
            <div class="text-center">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin"
                       asp-action="Dashboard"
                       class="btn btn-back">
                        ⬅ Back to Admin Dashboard
                    </a>
                }
                else if (User.IsInRole("User"))
                {
                    <a asp-controller="User"
                       asp-action="Dashboard"
                       class="btn btn-back">
                        ⬅ Back to Dashboard
                    </a>
                }
            </div>

        </div>
    </div>
</div>